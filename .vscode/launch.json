{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug current TS file (tsx)",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--import=tsx"
            ],
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}